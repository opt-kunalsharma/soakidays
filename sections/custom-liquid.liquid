<div {% if settings.animation_enable %}data-aos="fade-up"{% endif %} class="custom-liquid" id="section-{{ section.id }}">
  <div class="container">
    {%- if section.settings.section_title != '' or section.settings.section_sub_title != '' -%}
    <div class="row">
      <div class="col-lg-12">
        {% render 'section-heading' %}
      </div>
    </div>
    {%- endif -%}
    <div class="row">
      <div class="col-12">
        <div class="custom-liquid-code">
          {{ section.settings.custom_liquid }}
        </div>
      </div>
    </div>	
  </div>
</div>

{%- render 'section-style' -%}

