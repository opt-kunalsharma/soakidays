              "default": false
          },
		  {
              "type": "checkbox",
              "id": "content_border_color_enable",
              "label": "Content Border Color Enable",
              "default": false
          },
		  {
              "type": "checkbox",
              "id": "content_bg_color_enable",
              "label": "Content BG Color Enable",
              "default": false
          },
		  {
              "type": "color",
              "id": "bg_color",
              "label": "Content BG Color",
              "default": "#f2f4f5"
