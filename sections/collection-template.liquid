          },
          {
              "type": "checkbox",
              "id": "large_width_sidebar",
              "label": "Enable Large Width",
              "default": false
          },
          {
              "type": "radio",
              "id": "collection_filtering_handle",
              "label": "Collection Filtering",
              "options": [
                  {
                      "label": "Storefront Filtering",
                      "value": "storefront_filtering"
