{% liquid
assign theme_rtl = false
if settings.rtl_enable and settings.langauges_rtl == blank
  assign theme_rtl = true
endif

if settings.rtl_enable and settings.langauges_rtl != blank
  assign rtl_languages = settings.langauges_rtl | split: ','
  for language in rtl_languages
    if language == request.locale.iso_code
      assign theme_rtl = true
    endif
  endfor
endif
%}

{% if theme_rtl %}
<!-- Link your style.css and responsive.css files below -->
{{ 'rtl-global.css' | asset_url | stylesheet_tag }}
<link data-href="{{ 'font-icons.css' | asset_url }}" rel="stylesheet" />
{{ 'rtl-bootstrap.min.css' | asset_url | stylesheet_tag }}
{{ 'plugins.css' | asset_url | stylesheet_tag }}
{{ 'aos.min.css' | asset_url | stylesheet_tag }}
{{ 'rtl-style.css' | asset_url | stylesheet_tag }}
<!-- Make your theme CSS calls here -->
{{ 'rtl-theme-custom.css' | asset_url | stylesheet_tag }}
{{ 'rtl-theme.css' | asset_url | stylesheet_tag }}
{{ 'theme-rtl.css' | asset_url | stylesheet_tag }}
{% else %}
<!-- Link your style.css and responsive.css files below -->
{{ 'global.css' | asset_url | stylesheet_tag }}
<link data-href="{{ 'font-icons.css' | asset_url }}" rel="stylesheet" />
{{ 'bootstrap.min.css' | asset_url | stylesheet_tag }}
{{ 'plugins.css' | asset_url | stylesheet_tag }}
{{ 'aos.min.css' | asset_url | stylesheet_tag }}
{{ 'style.css' | asset_url | stylesheet_tag }}
<!-- Make your theme CSS calls here -->
{{ 'theme-custom.css' | asset_url | stylesheet_tag }}
{{ 'theme.css' | asset_url | stylesheet_tag }}
{% endif %}

{% if settings.dark_css_enable %}
{{ 'dark.css' | asset_url | stylesheet_tag }}
{% endif %}
<!-- Make all your dynamic CSS and Color calls here -->
{{ 'skin-and-color.css' | asset_url | stylesheet_tag }}