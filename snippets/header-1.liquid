<style>
  {%- for block in section.blocks -%}
  {%- case block.type -%}
  {%- when 'header_color' -%}
  {%- if block.settings.header_color_enable -%}
  .ltn__header-4 .ltn__header-middle-area, .ltn__header-5 .ltn__header-middle-area{
    background: {{ block.settings.header_bg_color }};
  }
  .ltn__main-menu>ul>li>a, .ltn__header-options, .mini-cart-icon, .get-support .get-support-info h6, .get-support .get-support-info h4 p{
    color: {{ block.settings.header_color }};
  }
  .get-support .get-support-icon {
    color: {{ block.settings.support_icon_color }};
  }
  .sticky-active.ltn__sticky-bg-white{
    background: {{ block.settings.header_sticky_bg_color }};
  }
  .sticky-active.ltn__sticky-bg-white .header-feature-icon, .sticky-active.ltn__sticky-bg-white .header-feature-item h6, .sticky-active.ltn__sticky-bg-white .header-feature-item p, .sticky-active.ltn__sticky-bg-white .header-search-1 .search-icon, .sticky-active.ltn__sticky-bg-white .header-wishlist a, .sticky-active.ltn__sticky-bg-white .ltn__main-menu>ul>li>a, .sticky-active.ltn__sticky-bg-white .mini-cart-icon,
  .sticky-active.ltn__sticky-bg-white .get-support .get-support-info h6, .sticky-active.ltn__sticky-bg-white .get-support .get-support-info h4 p{
  	color: {{ block.settings.header_sticky_color }};
  }
  {%- endif -%}
  {%- if block.settings.other_pages_header_color_enable -%}
  {%- unless template == 'index' -%}
  .ltn__header-4 .ltn__header-middle-area, .ltn__header-5 .ltn__header-middle-area{
    background: {{ block.settings.other_pages_header_bg_color }};
  }
  .ltn__main-menu>ul>li>a, .ltn__header-options, .mini-cart-icon, .get-support .get-support-info h6, .get-support .get-support-info h4 p{
    color: {{ block.settings.other_pages_header_color }};
  }
  .get-support .get-support-icon {
    color: {{ block.settings.other_pages_support_icon_color }};
  }
  .sticky-active.ltn__sticky-bg-white{
    background: {{ block.settings.other_pages_header_sticky_bg_color }};
  }
  .sticky-active.ltn__sticky-bg-white .header-feature-icon, .sticky-active.ltn__sticky-bg-white .header-feature-item h6, .sticky-active.ltn__sticky-bg-white .header-feature-item p, .sticky-active.ltn__sticky-bg-white .header-search-1 .search-icon, .sticky-active.ltn__sticky-bg-white .header-wishlist a, .sticky-active.ltn__sticky-bg-white .ltn__main-menu>ul>li>a, .sticky-active.ltn__sticky-bg-white .mini-cart-icon,
  .sticky-active.ltn__sticky-bg-white .get-support .get-support-info h6, .sticky-active.ltn__sticky-bg-white .get-support .get-support-info h4 p{
  	color: {{ block.settings.other_pages_header_sticky_color }};
  }
  {%- endunless -%}
  {%- endif -%}
  {%- endcase -%}
  {%- endfor -%}
</style>

<!-- HEADER AREA START (header-5) -->
{%- capture header_transparent_class -%}
{%- if section.settings.header_transparent_enable and section.settings.other_page_header_transparent_enable -%}
ltn__header-transparent
{%- elsif section.settings.header_transparent_enable -%}
{%- if template == 'index' -%}
ltn__header-transparent
{%- endif -%}
{%- elsif section.settings.other_page_header_transparent_enable -%}
{%- unless template == 'index' -%}
ltn__header-transparent
{%- endunless -%}
{%- endif -%}
{%- endcapture -%}
<header id="section-{{ section.id }}" data-section="headerSection" class="ltn__header-area ltn__header-5 {{ header_transparent_class }} d-none d-sm-none d-md-none d-lg-none d-xl-block">
  <!-- ltn__header-top-area start -->
  {%- for block in section.blocks -%}
  {%- case block.type -%}
  {%- when 'header_top' -%}
  {%- unless template != 'index' and block.settings.disable_header_top -%}
  {%- render 'header-top', block: block -%}
  {%- endunless -%}
  {%- endcase -%}
  {%- endfor -%}
  <!-- ltn__header-top-area end -->
  <!-- ltn__header-middle-area start -->
  <div class="ltn__header-middle-area {% if section.settings.sticky_header_enable %}ltn__header-sticky{% endif %} {% if section.settings.large_width_enable %}plr--9{% endif %} ltn__sticky-bg-white ltn__mobile-logo-option-one-line">
    <div class="{% if section.settings.large_width_enable %}container-fluid{% else %}container{% endif %}">
      <div class="row">
        <div class="col">
          <div class="site-logo-wrap">
            <div class="site-logo">
              {%- render 'header-logo' -%}
            </div>
            {%- if section.settings.support_title != '' or section.settings.support_number != '' -%}
            <div class="get-support clearfix">
              <div class="get-support-icon">
                <i class="icon-call"></i>
              </div>
              <div class="get-support-info">
                {%- if section.settings.support_title != '' -%}
                <h6>{{ section.settings.support_title }}</h6>
                {%- endif -%}
                {%- if section.settings.support_number != '' -%}
                <h4>{{ section.settings.support_number }}</h4>
                {%- endif -%}
              </div>
            </div>
            {%- endif -%}
          </div>
        </div>
        <div class="col header-menu-column">
          <div class="header-menu d-none d-xl-block">
             {%- render 'main-menu' -%}
          </div>
        </div>
        {%- if section.settings.header_option_enable -%}
        <div class="{% if section.settings.menu_center_position %}col{% endif %} ltn__header-options ltn__header-options-2">
          {%- render 'header-option' -%}
        </div>
        {%- else -%}
        <!-- Mobile Menu Button -->
        <div class="mobile-menu-toggle {% if section.settings.header_transparent_enable %}menu-btn-white{% endif %} d-xl-none">
          <a href="#ltn__utilize-mobile-menu" class="ltn__utilize-toggle">
            <svg viewBox="0 0 800 600">
              <path d="M300,220 C300,220 520,220 540,220 C740,220 640,540 520,420 C440,340 300,200 300,200" id="top"></path>
              <path d="M300,320 L540,320" id="middle"></path>
              <path d="M300,210 C300,210 520,210 540,210 C740,210 640,530 520,410 C440,330 300,190 300,190" id="bottom" transform="translate(480, 320) scale(1, -1) translate(-480, -318) "></path>
            </svg>
          </a>
        </div>
        {%- endif -%}
      </div>
    </div>
  </div>
  <!-- ltn__header-middle-area end -->
</header>
<!-- HEADER AREA END -->

{%- render 'mini-cart' -%}
{%- render 'mobile-header' -%}