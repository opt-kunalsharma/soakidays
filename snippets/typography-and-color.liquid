{%- style -%}
{%- if settings.typography_enable -%}
{% assign body_font = settings.body_font_handle %}
{% assign header_font = settings.header_font_handle %}

{{ body_font | font_face: font_display: 'swap' }}
{{ header_font | font_face: font_display: 'swap' }}
{%- endif -%}

/* ----------------------------------------------------
Normalize    071C1F   0E292D
---------------------------------------------------- */
:root {
{%- if settings.global_color_enable -%}
--ltn__primary-color: {{ settings.color_primary }};
--ltn__secondary-color: {{ settings.color_secondary }};
--ltn__primary-color-2: #041113;
/* Darken */
--ltn__primary-color-3: #133236;
{%- else -%}
--ltn__primary-color: #071c1f;
--ltn__primary-color-2: #041113;
/* Darken */
--ltn__primary-color-3: #133236;
/* Lighten */
--ltn__secondary-color: #e53e29;
--ltn__secondary-color-2: #cb3421;
/* Darken */
--ltn__secondary-color-3: #fb412a;
{%- endif -%}

/* Lighten */
{%- if settings.typography_color_enable -%}
--ltn__heading-color: {{ settings.heading_color }};
--ltn__paragraph-color: {{ settings.paragraph_color }};
{%- else -%}
--ltn__heading-color: #071c1f;
--ltn__paragraph-color: #071c1f;
{%- endif -%}

{% if settings.typography_enable %}
--ltn__heading-font: {{ header_font.family }}, {{ header_font.fallback_families }};
--ltn__body-font: {{ body_font.family }}, {{ body_font.fallback_families }};
{% else %}
--ltn__heading-font: 'Rajdhani', sans-serif;
--ltn__body-font: 'Open Sans', sans-serif;
{% endif %}

/* Footer ACD2D8 8CB2B2  */
--ltn__color-1: #8cb2b2;
--ltn__color-2: #ACD2D8;
--ltn__color-3: #A3BCC0;
